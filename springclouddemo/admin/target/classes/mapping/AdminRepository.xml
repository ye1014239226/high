<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yjx.repository.AdminRepository">
    <!--	sql语句结果直接和实体类映射-->


    <select id="findAll" resultType="admin">
		select * from admin
	</select>

    <select id="login" resultType="admin" parameterType="String">
        select * from admin where admin_name=#{admin_name} and admin_pwd=#{admin_pwd}
    </select>

    <select id="regist">
        insert into admin(admin_name,admin_pwd) value(#{admin_name},#{admin_pwd})
    </select>




</mapper>